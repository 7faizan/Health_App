<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/firstNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="74dp"
        android:layout_marginStart="74dp"
        android:layout_marginTop="41dp"
        android:ems="10"
        android:hint="Enter a number"
        android:inputType="textPersonName|number" />

    <EditText
        android:id="@+id/secNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/firstNum"
        android:layout_alignStart="@+id/firstNum"
        android:layout_below="@+id/firstNum"
        android:layout_marginTop="52dp"
        android:ems="10"
        android:hint="Enter a number"
        android:inputType="textPersonName|number" />

    <Button
        android:id="@+id/addBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/secNum"
        android:layout_alignStart="@+id/secNum"
        android:layout_below="@+id/secNum"
        android:layout_marginLeft="61dp"
        android:layout_marginStart="61dp"
        android:layout_marginTop="33dp"
        android:text="Add" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="75dp"
        android:layout_height="50dp"
        android:layout_alignEnd="@+id/addBtn"
        android:layout_alignRight="@+id/addBtn"
        android:layout_below="@+id/addBtn"
        android:layout_marginTop="58dp"
        android:text="result"
        android:textAppearance="@style/TextAppearance.AppCompat" />
</RelativeLayout>